<%= form_with(model: payment_card) do |form| %>
    <form class="w-full max-w-lg">
        <%= render 'shared/form_errors_messages', object: form.object %>

        <%= form.hidden_field :user_id, value: current_user.id %>

        <div class="flex flex-wrap -mx-3">
            <div class="w-full px-3">
                <%= form.label :card_number, t('.card_number'), class: "block tracking-wide font-semibold mb-2" %>                
                <%= form.text_field :card_number, placeholder: t('.placeholder.card_number'), autofocus: true, class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3">
            <div class="w-full md:w-1/3 px-3">
                <%= form.label :expiry_month, t('.expiry_month'), class: "block tracking-wide font-semibold mb-2" %>
                <%= form.number_field :expiry_month, value: form.object.expiry_month || nil, step: 1, min: 1, max: 12, class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>

            <div class="w-full md:w-1/3 px-3">
                <%= form.label :expiry_year, t('.expiry_year'), class: "block tracking-wide font-semibold mb-2" %>
                <%= form.number_field :expiry_year, value: form.object.expiry_year || nil, step: 1, min: (Time.zone.today.year - 2000), max: 99, class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>

            <div class="w-full md:w-1/3 px-3">
                <%= form.label :cvv, t('.cvv'), class: "block tracking-wide font-semibold mb-2" %>
                <%= form.password_field :cvv, value: form.object.cvv || nil, placeholder: t('.placeholder.cvv'), class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>
        </div>

        <div class="flex items-center justify-between py-2">
            <%= form.button nil, class: "cursor-pointer bg-gray-300 hover:bg-gray-400 px-3 py-1 font-medium hover:text-gray-800 rounded-full shadow" do %>
                <%= t('button.submit') %>
            <% end %>
        </div>
    </form>
<% end %>