<%= form_with(model: delivery_address) do |form| %>
    <form class="w-full max-w-lg">
        <%= render 'shared/form_errors_messages', object: form.object %>

        <%= form.hidden_field :user_id, value: current_user.id %>

        <div class="flex flex-wrap -mx-3">
            <div class="w-full px-3">
                <%= form.label :post_service, t('.post_service'), class: "block tracking-wide font-semibold mb-2" %>                
                <%= form.select :post_service, DeliveryAddress.post_services.keys.map{ |key| [DeliveryAddress.human_enum_name(:post_service, key), key] }, {prompt: t('.prompt.post_service'), selected: form.object.post_service}, {class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"} %>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3">
            <div class="w-full md:w-1/3 px-3">
                <%= form.label :country, t('.country'), class: "block tracking-wide font-semibold mb-2" %>
                <%= form.text_field :country, placeholder: t('.placeholder.country'), class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>

            <div class="w-full md:w-2/3 px-3">
                <%= form.label :locality, t('.locality'), class: "block tracking-wide font-semibold mb-2" %>
                <%= form.text_field :locality, placeholder: t('.placeholder.locality'), class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3">
            <div class="w-full px-3">
                <%= form.label :address, t('.address'), class: "block tracking-wide font-semibold mb-2" %>                
                <%= form.text_field :address, placeholder: t('.placeholder.address'), class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3">
            <div class="w-full md:w-2/3 px-3">
                <%= form.label :personal_name, t('.personal_name'), class: "block tracking-wide font-semibold mb-2" %>
                <%= form.text_field :personal_name, placeholder: t('.placeholder.personal_name'), class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>

            <div class="w-full md:w-1/3 px-3">
                <%= form.label :phone, t('.phone'), class: "block tracking-wide font-semibold mb-2" %>
                <%= form.telephone_field :phone, placeholder: t('.placeholder.phone'), class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
            </div>
        </div>

        <div class="flex items-center justify-between py-2">
            <%= form.button nil, class: "cursor-pointer bg-gray-300 hover:bg-gray-400 px-3 py-1 font-medium hover:text-gray-800 rounded-full shadow" do %>
                <%= t('button.submit') %>
            <% end %>
        </div>
    </form>
<% end %>