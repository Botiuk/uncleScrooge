<h2 class="text-start text-xl font-semibold leading-none pb-2"><%= t('.title') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-wrap -mx-3">
    <div class="w-full md:w-1/3 px-3">
      <%= f.label :email, t('.email'), class: "block tracking-wide font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
  </div>

  <div class="flex flex-wrap -mx-3">
    <div class="w-full md:w-1/3 px-3">
      <%= f.label :password, t('.password'), class: "block tracking-wide font-semibold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex flex-wrap -mx-3">
      <div class="w-full md:w-1/3 px-3">
        <%= f.check_box :remember_me, class: "cursor-pointer w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2" %>
        <%= f.label :remember_me, t('.remember_me'), class: "ms-2 text-base" %>
      </div>
    </div>
  <% end %>

  <div class="flex items-center justify-between py-2">
    <%= f.submit t('.login'), class: "cursor-pointer bg-gray-300 hover:bg-gray-400 px-3 py-1 font-medium hover:text-gray-800 rounded-full shadow" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
