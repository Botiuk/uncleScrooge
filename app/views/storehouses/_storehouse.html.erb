<tr id="<%= dom_id storehouse %>" class="odd:bg-gray-100 even:bg-white border text-center">
    <td class="p-3 text-start">
        <%= link_to storehouse.product.name, storehouse.product %>
    </td>
    <td class="p-3">
        <%= storehouse.quantity %>
    </td>
    <td class="p-3">
        <%= Storehouse.human_enum_name(:operation_type, storehouse.operation_type) %>
    </td>
    <td class="p-3">
        <%= I18n.l(storehouse.created_at, format: :long) %>
    </td>
    <td class="p-3">
        <% if can? :update, storehouse %>
            <%= link_to t('button.edit'), edit_storehouse_path(storehouse), class: "cursor-pointer bg-gray-300 hover:bg-gray-400 px-3 py-1 font-medium hover:text-gray-800 rounded-full shadow" %>
        <% end %>
    </td>
    <td class="p-3">
        <% if can? :destroy, storehouse %>
            <%= button_to t('button.delete'), storehouse, method: :delete, data: { turbo_confirm: t('button.delete_confirm') }, class: "cursor-pointer bg-gray-300 hover:bg-gray-400 px-3 py-1 font-medium hover:text-gray-800 rounded-full shadow", form: {style: 'display:inline-block;'} %>
        <% end %>
    </td>
</tr>