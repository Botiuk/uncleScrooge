<%= form_with(model: order) do |form| %>
    <form class="w-full max-w-lg">
        <%= render 'shared/form_errors_messages', object: form.object %>

        <%= form.hidden_field :order_price, value: form.object.order_price || params[:order_price] %>

        <%= form.hidden_field :cart_id, value: form.object.cart_id || @cart.id %>

        <div class="flex flex-wrap -mx-3">
            <%= form.fields_for :delivery_address_order do |builder| %>
                <div class="w-full md:w-1/2 px-3">
                    <%= builder.label :delivery_address_id, t('.delivery_address_id'), class: "block tracking-wide font-semibold mb-2" %>
                    <%= select(:delivery_address_order, :delivery_address_id, options_for_select(@delivery_addresses), {prompt: t('.prompt.delivery_address_id')}, {class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"}) %>
                </div>
            <% end %>
            
            <%= form.fields_for :payment_card_order do |builder| %>
                <div class="w-full md:w-1/2 px-3">
                    <%= builder.label :payment_card_id, t('.payment_card_id'), class: "block tracking-wide font-semibold mb-2" %>
                    <%= select(:payment_card_order, :payment_card_id, options_for_select(@payment_cards), {prompt: t('.prompt.payment_card_id')}, {class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"}) %>
                </div>
            <% end %>
        </div>

        <% if can? :update, Order %>
            <div class="flex flex-wrap -mx-3">
                <div class="w-full px-3">
                    <%= form.label :order_status, t('.order_status'), class: "block tracking-wide font-semibold mb-2" %>
                    <%= form.select :order_status, Order.order_statuses.keys.map{ |key| [Order.human_enum_name(:order_status, key), key] }, {prompt: t('.prompt.order_status'), selected: form.object.order_status}, {class: "appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-200 focus:border-gray-400 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"} %>
                </div>
            </div>
        <% end %>

        <div class="flex items-center justify-between py-2">
            <%= form.button nil, class: "cursor-pointer bg-gray-300 hover:bg-gray-400 px-3 py-1 font-medium hover:text-gray-800 rounded-full shadow" do %>
                <%= t('button.submit') %>
            <% end %>
        </div>
    </form>
<% end %>